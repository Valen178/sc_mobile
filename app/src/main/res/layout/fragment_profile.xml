<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tu información de perfil"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleProfile" />

        <!-- Foto de perfil circular -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfilePhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textProfile">

            <ImageView
                android:id="@+id/imageProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="Foto de perfil" />

        </androidx.cardview.widget.CardView>

        <!-- Botón para cambiar foto -->
        <Button
            android:id="@+id/buttonChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cambiar Foto"
            android:textSize="12sp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardProfilePhoto" />

        <!-- Contenedor de información del perfil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfileInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonChangePhoto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textUserType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textUserLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellido: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Altura: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peso: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textUserSport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deporte: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textUserPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teléfono: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textUserInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instagram: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X (Twitter): "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserAgency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agencia: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puesto: "
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textUserDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: "
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Editar Perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardProfileInfo" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Cerrar Sesión"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonEditProfile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

