<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo blanco -->
    <solid android:color="#FFFFFF" />

    <!-- Borde gris claro -->
    <stroke
        android:width="2dp"
        android:color="#EFEFEF" />

    <!-- Bordes redondeados -->
    <corners android:radius="60dp" />

    <!-- Padding interno -->
    <padding
        android:left="16dp"
        android:top="10dp"
        android:right="16dp"
        android:bottom="10dp"/>
</shape>