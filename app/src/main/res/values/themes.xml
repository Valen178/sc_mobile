<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light Mode -->
    <style name="Base.Theme.SportConnection" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Colores de fondo y superficie -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/light</item>
        <item name="colorOnSurface">@color/dark</item>
        <item name="colorOnBackground">@color/dark</item>

        <!-- Colores de error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Color de la barra de navegaciÃ³n -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textColorSecondary">@color/secondary</item>

        <!-- Colores de botones -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- Colores de inputs -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Theme.SportConnection" parent="Base.Theme.SportConnection" />

    <!-- Estilo para botones -->

    <style name="Widget.App.Button.Google" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="materialThemeOverlay">@null</item>
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:background">@drawable/boton_google</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Widget.App.Button.Special" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@null</item>
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">60dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para inputs -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>

    <!-- Estilo para imagen circular -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>